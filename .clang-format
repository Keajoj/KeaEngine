# Example .clang-format file for modern C++ projects

BasedOnStyle: LLVM # Start from LLVM (widely used, readable)
IndentWidth: 4
TabWidth: 4
UseTab: Never # Use spaces only

ColumnLimit: 120 # Makes code more readable on widescreens

AllowShortIfStatementsOnASingleLine: false
AllowShortLoopsOnASingleLine: false
AllowShortFunctionsOnASingleLine: InlineOnly

BreakBeforeBraces: Allman # Classic game-dev style; use 'Attach' for Google/LLVM/WebKit styles
BreakConstructorInitializersBeforeComma: true

PointerAlignment: Left # 'int* x' instead of 'int *x'
SpaceAfterCStyleCast: true

ConstructorInitializerAllOnOneLineOrOnePerLine: true
ConstructorInitializerIndentWidth: 4

NamespaceIndentation: None # Indent inside namespaces

SortIncludes: true
IncludeBlocks: Preserve
IncludeCategories:
    - Regex: '^"'
      Priority: 0
      SortPriority: 0
    - Regex: "^<"
      Priority: 1
      SortPriority: 1
    - Regex: ".*"
      Priority: 10

SpacesInAngles: false

Cpp11BracedListStyle: true
SpaceBeforeParens: ControlStatements

KeepEmptyLinesAtTheStartOfBlocks: true
SpaceBeforeAssignmentOperators: true

EmptyLineBeforeAccessModifier: Always
